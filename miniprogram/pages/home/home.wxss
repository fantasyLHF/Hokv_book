@import "./home.skeleton.wxss";

/* miniprogram/pages/home/home.wxss */
.home .home-bg {
  height: 280rpx;
  background-color: #1296db;
  position: relative;
  padding: 60rpx 60rpx;
  color: #fff;
}

.content {
  font-size: 28rpx;
}

.home-money {
  font-weight: bold;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.home-money .big {
  font-size: 50rpx;
}

.sum {
  margin-top: 80rpx;
  display: flex;
  align-items: center;
}

.money-tip {
  flex: auto;
}

.money-tip .Int {
  font-size: 36rpx;
  font-weight: bold;
}

.money-tip .float {
  font-size: 24rpx;
  font-weight: bold;
}

.r {
  text-align: right;
}

.nav {
  background-color: #fff;
  height: 80rpx;
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #aaa;

}

.nav .nav-l {
  flex: auto;
}

.nav .nav-l text {
  margin-left: 20rpx;

}

.nav .nav-r {
  width: 80rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  height: 80rpx;
}

.nav .nav-in {
  color: #00B26A;
}

.nav .nav-out {
  color: #e4393c;
}

.date-select {
  position: absolute;
  opacity: 0;
  top: 0rpx;
  left: 0rpx;
}

.nav .nav-r .pointer {
  height: 10rpx;
  width: 10rpx;
  background-color: #aaa;
  border-radius: 50%;
  margin: 5rpx;
}

.pcontent {
  border-top: 1rpx dashed #aaa;
}

.tips {

  text-align: center;
  color: #aaa;
  padding: 40rpx 0;
  background-color: #fff;
}

.add {
  margin-top: 10rpx;
  color: #1296db;
}

.add:active {
  opacity: 0.8;
}