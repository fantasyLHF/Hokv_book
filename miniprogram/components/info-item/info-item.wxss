/* components/info-item/info-item.wxss */
.box {
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.img {
  width: 80rpx;
  margin-right: 20rpx;
}

.content {
  flex: 1;
}

.icon {

  width: 50rpx;
  margin-left: 20rpx;
}

image {
  width: 100%;
}

.top {
  display: flex;
}

.name {
  font-weight: bold;
  color: #000;
  flex: 1;
  text-align: left;
}

.money {
  flex: 1;
  text-align: right;
}

.bot {
  display: flex;
}

.press {
  flex: 1;
  margin-top: 6rpx;
}

.press-box {
  background-color: #eee;
  width: 100%;
  height: 26rpx;
  border-radius: 15rpx;
}

.count {
  width: 100rpx;
  text-align: right;
}